#!/bin/bash
export LC_ALL=C
# Flat colors, ie boxes with uniform filling
smooth=1
# smooth=1 will interpolate color filling


cd gnuwork

rm fort.*



if [ -f ../output/diva.log ] ; then
 cp -f ../output/diva.log .
fi

echo preparing files for mesh plot
cp ../meshgenwork/fort.22 .
cp ../meshgenwork/fort.23 .
../../bin/forgnuplotmesh.a >> diva.log

if [ $? -ne 0 ];then
echo ' '
echo --------------------------------------------
echo A problem was encountered during execution !
echo          divagnu      forgnuplotmesh.a
echo Check execution track
echo --------------------------------------------

echo ' ' >> diva.log
echo -------------------------------------------- >> diva.log
echo A problem was encountered during execution ! >> diva.log
echo          divagnu      forgnuplotmesh.a  >> diva.log
echo Check execution track >> diva.log
echo -------------------------------------------- >> diva.log
fi

# output if fort.69
../../bin/forgnuplotmeshl.a >> diva.log

if [ $? -ne 0 ];then
echo ' '
echo --------------------------------------------
echo A problem was encountered during execution !
echo          divagnu      forgnuplotmeshl.a
echo Check execution track
echo --------------------------------------------

echo ' ' >> diva.log
echo -------------------------------------------- >> diva.log
echo A problem was encountered during execution ! >> diva.log
echo          divagnu      forgnuplotmeshl.a  >> diva.log
echo Check execution track >> diva.log
echo -------------------------------------------- >> diva.log
fi

# output if fort.71

echo preparing files for coast plot
cp ../input/coast.cont fort.66
../../bin/forgnuplotcoastfilled.a >> diva.log

if [ $? -ne 0 ];then
echo ' '
echo --------------------------------------------
echo A problem was encountered during execution !
echo          divagnu      forgnuplotcoastfilled.a
echo Check execution track
echo --------------------------------------------

echo ' ' >> diva.log
echo -------------------------------------------- >> diva.log
echo A problem was encountered during execution ! >> diva.log
echo          divagnu      forgnuplotcoastfilled.a  >> diva.log
echo Check execution track >> diva.log
echo -------------------------------------------- >> diva.log
fi

# output is fort.67
#cat dvcoastlineheader > diva_coastlinefilled
#cat dvcoastlinetailer>> diva_coastlinefilled




rm -f fort.19
if [ -f ../input/RL.dat ] 
then
echo preparing RL field
cp ../input/RL.dat fort.20
cp ../input/RLinfo.dat fort.21
if [ "$smooth" == "1" ]
then
../../bin/forgnuplotanalysissmooth.a >> diva.log

if [ $? -ne 0 ];then
echo ' '
echo --------------------------------------------
echo A problem was encountered during execution !
echo          divagnu      forgnuplotanalysissmooth.a
echo Check execution track
echo --------------------------------------------

echo ' ' >> diva.log
echo -------------------------------------------- >> diva.log
echo A problem was encountered during execution ! >> diva.log
echo          divagnu      forgnuplotanalysissmooth.a  >> diva.log
echo Check execution track >> diva.log
echo -------------------------------------------- >> diva.log
fi

else
../../bin/forgnuplotanalysis.a >> diva.log

if [ $? -ne 0 ];then
echo ' '
echo --------------------------------------------
echo A problem was encountered during execution !
echo          divagnu      forgnuplotanalysis.a
echo Check execution track
echo --------------------------------------------

echo ' ' >> diva.log
echo -------------------------------------------- >> diva.log
echo A problem was encountered during execution ! >> diva.log
echo          divagnu      forgnuplotanalysis.a  >> diva.log
echo Check execution track >> diva.log
echo -------------------------------------------- >> diva.log
fi

fi
# output is fort.68
mv fort.68 fort.72
fi


rm -f fort.19
if [ -f ../output/DATABINS.dat ] 
then
echo preparing DATABINS field
cp ../output/DATABINS.dat fort.20
cp ../output/DATABINSinfo.dat fort.21

../../bin/forgnuplotanalysis.a >> diva.log

if [ $? -ne 0 ];then
echo ' '
echo --------------------------------------------
echo A problem was encountered during execution !
echo          divagnu      forgnuplotanalysis.a
echo Check execution track
echo --------------------------------------------

echo ' ' >> diva.log
echo -------------------------------------------- >> diva.log
echo A problem was encountered during execution ! >> diva.log
echo          divagnu      forgnuplotanalysis.a  >> diva.log
echo Check execution track >> diva.log
echo -------------------------------------------- >> diva.log
fi

# output is fort.68
mv fort.68 fort.73
fi


