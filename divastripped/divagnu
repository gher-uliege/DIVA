mv fort.40 longref.dat.default


jj=$(cat ../output/outliersbis.normalized.dat | wc -l)
let jj=$jj-4
if [ "$jj" -ge "0" ]
then
head -$jj ../output/outliersbis.normalized.dat | tac > fort.43
fi

if [ "$#" == "2" ]
then 
. divaplotall $1 $2
else
. divaplotall
fi

 cp -f diva.log ../output/.

cd ..