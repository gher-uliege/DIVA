then
../../bin/forgnuplotanalysissmooth.a >> diva.log

if [ $? -ne 0 ];then
echo ' '
echo --------------------------------------------
echo A problem was encountered during execution !
echo          divagnu      forgnuplotanalysissmooth.a
echo Check execution track
echo --------------------------------------------

echo ' ' >> diva.log
echo -------------------------------------------- >> diva.log
echo A problem was encountered during execution ! >> diva.log
echo          divagnu      forgnuplotanalysissmooth.a  >> diva.log
echo Check execution track >> diva.log
echo -------------------------------------------- >> diva.log
